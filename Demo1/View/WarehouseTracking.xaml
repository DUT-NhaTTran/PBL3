                                        <ListBox ItemsSource="{Binding ParcelInfoList}">
                                            <ListBox.ItemTemplate>
                                                <DataTemplate>
                                                    <StackPanel>
                                                        <TextBlock Text="{Binding ID}" FontSize="15"
                                                                   Foreground="#B0B0B2"/>
                                                        <TextBlock FontSize="15"
                                                                   Foreground="#B0B0B2"
                                                                   Text="{Binding ParcelName}" />
                                                        <TextBlock Text="{Binding Mass }" 

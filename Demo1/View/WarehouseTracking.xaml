<UserControl x:Class="Demo1.View.WarehouseTracking"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             xmlns:local="clr-namespace:Demo1.View"
             mc:Ignorable="d" 
             DataContext="{StaticResource WHTM}"
             d:DesignHeight="1150" d:DesignWidth="1000">
    <Border CornerRadius="20"
            Background="#434343">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="500"/>
                <ColumnDefinition Width="500*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="100"/>
                    <RowDefinition Height="120"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!--Tìm mã kho hàng-->
                <Grid Grid.Row="0">
                    <Border CornerRadius="20"
                            Background="#212325"
                            Margin="15"
                            Width="350">
                        <StackPanel Orientation="Horizontal">
                            <Button Width="63" Height="55" 
                                    Margin="10 0 0 0"  Background="Transparent"
                                    Command="{Binding SearchCommand}"
                                    BorderBrush="Transparent">
                                <materialDesign:PackIcon Kind="Magnify" Height="40" Width="40" 
                                                         Foreground="White"
                                                         VerticalAlignment="Center"
                                                         HorizontalAlignment="Center"/>
                            </Button>

                            <TextBox   materialDesign:HintAssist.Hint="Nhập kho hàng"
                                       materialDesign:HintAssist.FloatingScale="0"
                                       materialDesign:HintAssist.Foreground="Blue"
                                       FontSize="25" BorderThickness="0"
                                       Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                       Text="{Binding WarehouseText,Mode=TwoWay}" 
                                       Foreground="#FFFFFF" Width="250" Height="70" />
                        </StackPanel>
                    </Border>
                </Grid>

                <!--Button chọn miền-->
                <Grid Grid.Row="1">
                    <!--Tất cả-->
                    <Button Background="#272727"
                            Margin="12,10,305,0"
                            Height="40"
                            Command="{Binding AllWarehousesCollectionCommand}"
                            VerticalAlignment="Top">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                     CornerRadius="5">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Tất cả"
                                                   Foreground="#FFFFFF"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"
                                                   Margin="28 0 0 0"
                                                   FontSize="20"/>
                                        <Border Background="#A3A3A3"
                                                CornerRadius="5"
                                                Margin="43 5 0 5"
                                                Width="45"
                                                Height="Auto">
                                            <TextBlock Text="{Binding All}"
                                                        Foreground="#FFFFFF"
                                                        VerticalAlignment="Center"
                                                        HorizontalAlignment="Center"
                                                        Margin="0 0 0 0"
                                                        FontSize="20"/>
                                        </Border>
                                    </StackPanel>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <!--Miền bắc-->
                    <Button Background="#272727"
                            Margin="240,70,85,0"
                            Height="40"
                            Command="{Binding NorthernWarehousesCollectionCommand}"
                            VerticalAlignment="Top">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                     CornerRadius="5">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Miền Bắc"
                                                   Foreground="#FFFFFF"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Left"
                                                   Margin="10 0 0 0"
                                                   FontSize="20"/>
                                        <Border Background="#A3A3A3"
                                                CornerRadius="5"
                                                Margin="21 5 0 5"
                                                Width="45"
                                                Height="Auto">
                                            <TextBlock Text="{Binding North}"
                                                    Foreground="#FFFFFF"
                                                    VerticalAlignment="Center"
                                                    HorizontalAlignment="Center"
                                                    Margin="0 0 0 0"
                                                    FontSize="20"/>
                                        </Border>
                                    </StackPanel>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <!--Miền nam-->
                    <Button Background="#272727"
                        Margin="240,10,85,0"
                        Height="40"
                        Command="{Binding SouthernWarehousesCollectionCommand}"
                        VerticalAlignment="Top">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                     CornerRadius="5">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Miền Nam"
                                           Foreground="#FFFFFF"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Left"
                                           Margin="10 0 0 0"
                                           FontSize="20"/>
                                        <Border Background="#A3A3A3"
                                            CornerRadius="5"
                                            Margin="10 5 0 5"
                                            Width="45"
                                            Height="Auto">
                                            <TextBlock Text="{Binding South}"
                                   Foreground="#FFFFFF"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   Margin="0 0 0 0"
                                   FontSize="20"/>
                                        </Border>
                                    </StackPanel>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <!--Miền trung-->
                    <Button Background="#272727"
                            Margin="12,70,305,0"
                            Height="40"
                            Command="{Binding CentralWarehousesCollectionCommand}"
                            VerticalAlignment="Top">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        CornerRadius="5">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Miền Trung"
                                                   Foreground="#FFFFFF"
                                                   Margin="11.25 5 0 5"
                                                   FontSize="20"/>
                                        <Border Background="#A3A3A3"
                                                CornerRadius="5"
                                                Margin="10 5 0 5"
                                                Width="45"
                                                Height="Auto">
                                            <TextBlock Text="{Binding Center}"
                                                       Foreground="#FFFFFF"
                                                       VerticalAlignment="Center"
                                                       HorizontalAlignment="Center"
                                                       Margin="0 0 0 0"
                                                       FontSize="20"/>
                                        </Border>
                                    </StackPanel>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>



                <Grid Grid.Row="2">
                    <ListBox ItemsSource="{Binding WarehouseInfoList}"
                             MouseDoubleClick="ListBox_MouseDoubleClick">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <!--<TextBlock Text="{Binding WarehouseName}" />
                                        <TextBlock Text="{Binding WarehouseID}" />
                                        <TextBlock Text="{Binding Capacity}" />-->

                                    <Border CornerRadius="10"
                                            Background="#303030"
                                            Width="230" Height="200"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center" 
                                            Margin="0 0 0 0">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="40"/>
                                                <RowDefinition Height="140"/>
                                            </Grid.RowDefinitions>

                                            <Grid Grid.Row="0">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="{Binding WarehouseName}"
                                                               Margin="20 18 18 0"
                                                               FontSize="10"
                                                               VerticalAlignment="Top" HorizontalAlignment="Center"
                                                               Foreground="#FFFFFF"/>

                                                    <TextBlock Text="{Binding WarehouseID}"
                                                               Margin="20 18 0 0"
                                                               FontSize="10"
                                                               VerticalAlignment="Top" HorizontalAlignment="Center"
                                                               Foreground="#E8DF04"/>
                                                </StackPanel>
                                            </Grid>

                                            <Grid Grid.Row="1">
                                                <Border CornerRadius="10"
                                                            BorderThickness="0.5"
                                                            Margin="5"
                                                            BorderBrush="#999898">
                                                    <Grid>
                                                        <lvc:CartesianChart Margin="10">
                                                            <lvc:CartesianChart.Series>
                                                                <lvc:ColumnSeries Title="Tổng kho" Values="1" />
                                                                <lvc:ColumnSeries Title="Đang chứa" Values= "{Binding ColumnData}" />
                                                            </lvc:CartesianChart.Series>

                                                            <!--Cấu trúc các trục của đồ thị-->
                                                            <lvc:CartesianChart.AxisX>
                                                                <lvc:Axis  FontSize="10" Margin="0,10,0,0">
                                                                    <lvc:Axis.Separator>
                                                                        <lvc:Separator Stroke="Transparent" />
                                                                    </lvc:Axis.Separator>
                                                                </lvc:Axis>
                                                            </lvc:CartesianChart.AxisX>

                                                            <lvc:CartesianChart.AxisY>
                                                                <lvc:Axis Title="Tỷ lệ (%)"
                                                                          FontSize="10" Position="LeftBottom">
                                                                    <lvc:Axis.Separator>
                                                                        <lvc:Separator Stroke="Transparent"  />
                                                                    </lvc:Axis.Separator>
                                                                </lvc:Axis>
                                                            </lvc:CartesianChart.AxisY>
                                                        </lvc:CartesianChart>
                                                    </Grid>
                                                </Border>
                                            </Grid>
                                        </Grid>
                                    </Border>
                                </WrapPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                    </ListBox>
                </Grid>
            </Grid>

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="80"/>
                    <RowDefinition Height="*"/>

                </Grid.RowDefinitions>

                <Grid Grid.Row="0"
                      Margin="0 10 0 0">

                    <TextBox   FontSize="20" BorderThickness="0"
                               Text="{Binding WarehouseName}" 
                               Margin="5,0,0,0"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"
                               HorizontalContentAlignment="Center"
                               Foreground="LightGoldenrodYellow" Width="270" Height="70" />

                    <TextBox   FontSize="20" BorderThickness="0"
                               Text="{Binding WarehouseID}"
                               Margin="0 0 40 0"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Right"
                               HorizontalContentAlignment="Center"
                               Foreground="YellowGreen" Width="150" Height="70" />

                </Grid>

                <Grid Grid.Row="1">
                    <TabControl Width="Auto"
                                materialDesign:ColorZoneAssist.Background="Transparent"
                                materialDesign:ColorZoneAssist.Foreground="#496DFE"
                                materialDesign:ColorZoneAssist.Mode="Custom"
                                VerticalContentAlignment="Center"
                                Style="{StaticResource MaterialDesignFilledTabControl}">
                        <TabItem Header="Thông tin chi tiết của kho hàng"
                                 FontSize="20">
                            <StackPanel >
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="50"></RowDefinition>
                                        <RowDefinition Height="*"></RowDefinition>
                                    </Grid.RowDefinitions>

                                    <Grid Grid.Row="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="200*"/>
                                            <ColumnDefinition Width="150*"/>
                                            <ColumnDefinition Width="150*"/>
                                        </Grid.ColumnDefinitions>

                                        <Grid Grid.Column="0">
                                            <TextBlock Text="Địa chỉ"
                                                       VerticalAlignment="Center"
                                                       HorizontalAlignment="Center"
                                                       TextWrapping="Wrap"
                                                       FontSize="20"
                                                       Foreground="#B0B0B2"/>
                                        </Grid>
                                        <Grid Grid.Column="1">
                                            <TextBlock Text="Sức chứa"
                                                       VerticalAlignment="Center"
                                                       HorizontalAlignment="Center"
                                                       TextWrapping="Wrap"
                                                       FontSize="20"
                                                       Foreground="#B0B0B2"/>
                                        </Grid>
                                        <Grid Grid.Column="2">
                                            <TextBlock Text="Dung lượng"
                                                       VerticalAlignment="Center"
                                                       HorizontalAlignment="Center"
                                                       TextWrapping="Wrap"
                                                       FontSize="20"
                                                       Foreground="#B0B0B2"/>
                                        </Grid>
                                    </Grid>

                                    <Grid Grid.Row="1" Margin="0,0,0,-268" Grid.ColumnSpan="2">
                                        <ScrollViewer Margin="0,0,0,10">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="200*"/>
                                                    <ColumnDefinition Width="150*"/>
                                                    <ColumnDefinition Width="150*"/>
                                                </Grid.ColumnDefinitions>
                                                <Grid Grid.Column="0">
                                                    <TextBlock Text="{Binding WHAddress}"
                                                               VerticalAlignment="Center"
                                                               HorizontalAlignment="Center"
                                                               FontSize="15"
                                                               TextWrapping="Wrap"
                                                               Foreground="#B0B0B2"/>
                                                </Grid>
                                                <Grid Grid.Column="1">
                                                    <TextBlock Text="{Binding WHCapacity}"
                                                               VerticalAlignment="Center"
                                                               HorizontalAlignment="Center"
                                                               FontSize="15"
                                                               TextWrapping="Wrap"
                                                               Foreground="#B0B0B2"/>
                                                </Grid>
                                                <Grid Grid.Column="2">
                                                    <TextBlock  Text="{Binding WHContained}"
                                                                VerticalAlignment="Center"
                                                                HorizontalAlignment="Center"
                                                                TextWrapping="Wrap"
                                                                FontSize="15"
                                                                Foreground="#B0B0B2"/>
                                                </Grid>
                                            </Grid>
                                        </ScrollViewer>
                                    </Grid>
                                </Grid>
                            </StackPanel>
                        </TabItem>

                        <TabItem Header="Thông tin các đơn hàng trong kho"
                                 FontSize="15">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="65"></RowDefinition>
                                    <RowDefinition Height="*"></RowDefinition>
                                </Grid.RowDefinitions>

                                <Grid Grid.Row="0" Grid.ColumnSpan="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="150*"/>
                                        <ColumnDefinition Width="170*"/>
                                        <ColumnDefinition Width="200*"/>
                                    </Grid.ColumnDefinitions>

                                    <Grid Grid.Column="0">
                                        <TextBlock Text="Mã đơn hàng"
                                                       VerticalAlignment="Center"
                                                       HorizontalAlignment="Center"
                                                       TextWrapping="Wrap"
                                                       FontSize="20"
                                                       Foreground="#B0B0B2"/>
                                    </Grid>
                                    <Grid Grid.Column="1">
                                        <TextBlock Text="Tên đơn hàng"
                                                       VerticalAlignment="Center"
                                                       HorizontalAlignment="Center"
                                                       TextWrapping="Wrap"
                                                       FontSize="20"
                                                       Foreground="#B0B0B2"/>
                                    </Grid>
                                    <Grid Grid.Column="2">
                                        <TextBlock Text="Khối lượng"
                                                      
                                                       VerticalAlignment="Center"
                                                       HorizontalAlignment="Center"
                                                       TextWrapping="Wrap"
                                                       FontSize="20"
                                                       Foreground="#B0B0B2"/>
                                    </Grid>
                                </Grid>

                                <Grid Grid.Row="1" Margin="0,0,0,0">
                                    <ListBox ItemsSource="{Binding ParcelInfoList}">
                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="150"/>
                                                        <ColumnDefinition Width="170"/>
                                                        <ColumnDefinition Width="200"/>
                                                    </Grid.ColumnDefinitions>
                                                    <Grid Grid.Column="0" >
                                                        <TextBlock Text="{Binding ID}"
                                                                   FontSize="15"
                                                                   VerticalAlignment="Center" HorizontalAlignment="Center"
                                                                   TextWrapping="Wrap"
                                                                   Foreground="#B0B0B2"/>
                                                    </Grid>
                                                    <Grid Grid.Column="1" >
                                                        <TextBlock Text="{Binding ParcelName}"
                                                                   FontSize="15"
                                                                   VerticalAlignment="Center" HorizontalAlignment="Center" 
                                                                   TextWrapping="Wrap"
                                                                   Foreground="#B0B0B2"/>
                                                    </Grid>
                                                    <Grid Grid.Column="2" >
                                                        <TextBlock  Text="{Binding Mass}"
                                                                    TextWrapping="Wrap"
                                                                    FontSize="15"
                                                                    VerticalAlignment="Center" HorizontalAlignment="Center" 
                                                                    Foreground="#B0B0B2"/>
                                                    </Grid>
                                                </Grid>
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>
                                </Grid>
                            </Grid>
                        </TabItem>
                    </TabControl>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</UserControl>

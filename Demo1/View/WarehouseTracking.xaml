                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="300"/>
                                            <ColumnDefinition Width="150"/>
                                            <ColumnDefinition Width="150"/>
                                        </Grid.ColumnDefinitions>

                                        <Grid Grid.Column="0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition/>
                                                <ColumnDefinition/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="Địa chỉ"
                                                       VerticalAlignment="Center"
                                                       HorizontalAlignment="Center"
                                                       TextWrapping="Wrap"
                                                       FontSize="20"
                                                       Foreground="#B0B0B2"/>
                                        </Grid>
                                        <Grid Grid.Column="1">
                                            <TextBlock Text="Sức chứa"
                                                       VerticalAlignment="Center"
                                                       HorizontalAlignment="Center"
                                                       TextWrapping="Wrap"
                                                       FontSize="20"
                                                       Foreground="#B0B0B2"/>
                                        </Grid>
                                        <Grid Grid.Column="2">
                                            <TextBlock Text="Dung lượng"
                                                       VerticalAlignment="Center"
                                                       HorizontalAlignment="Center"
                                                       TextWrapping="Wrap"
                                                       FontSize="20"
                                                       Foreground="#B0B0B2"/>
                                        </Grid>
                                    </Grid>
                                    <Grid Grid.Row="1" Grid.ColumnSpan="2" Margin="0,0,0,-268">
                                        <ScrollViewer Margin="0,0,0,10">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="300"/>
                                                    <ColumnDefinition Width="150"/>
                                                    <ColumnDefinition Width="150"/>
                                                </Grid.ColumnDefinitions>
                                                <Grid Grid.Column="0">
                                                    <TextBlock Text="{Binding WHAddress}"
                                                               VerticalAlignment="Center"
                                                               HorizontalAlignment="Center"
                                                               FontSize="15"
                                                               TextWrapping="Wrap"
                                                               Foreground="#B0B0B2"/>
                                                </Grid>
                                                <Grid Grid.Column="1">
                                                    <TextBlock Text="{Binding WHCapacity}"
                                                               VerticalAlignment="Center"
                                                               HorizontalAlignment="Center"
                                                               FontSize="15"
                                                               TextWrapping="Wrap"
                                                               Foreground="#B0B0B2"/>
                                                </Grid>
                                                <Grid Grid.Column="2">
                                                    <TextBlock  Text="{Binding WHContained}"
                                                        VerticalAlignment="Center"
                                                        HorizontalAlignment="Center"
                                                        TextWrapping="Wrap"
                                                        FontSize="15"
                                                        Foreground="#B0B0B2"/>
                                                </Grid>
                                            </Grid>
                                        </ScrollViewer>
                                    </Grid>
                                </Grid>
                            </StackPanel>
